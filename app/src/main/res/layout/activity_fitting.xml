<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"
            android:text="权重１"/>

        <EditText
            android:id="@+id/et_weight_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_et_1"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"
            android:text="权重２"/>

        <EditText
            android:id="@+id/et_weight_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_et_1"
            android:textColor="@color/black"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"
            android:text="偏移幅度"/>

        <EditText
            android:id="@+id/et_float"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_et_1"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"
            android:text="下降幅度"/>

        <EditText
            android:id="@+id/et_descent"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_et_1"
            android:textColor="@color/black"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"
            android:text="样本个数"/>

        <EditText
            android:id="@+id/et_count"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:inputType="number"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_et_1"
            android:textColor="@color/black"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_build"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/bg_blue_button"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/white"
            android:text="生成样本"/>

    </LinearLayout>

    <pers.xjh.note.widget.FittingSurfaceView
        android:id="@+id/fitting_surface_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_bgd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:background="@drawable/bg_red_button"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/white"
            android:text="批量梯度下降"/>

        <Button
            android:id="@+id/btn_sgd"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/bg_red_button"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/white"
            android:text="随机梯度下降"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"
            android:text="权重1"/>

        <TextView
            android:id="@+id/tv_weight_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_et_1"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"
            android:text="权重2"/>

        <TextView
            android:id="@+id/tv_weight_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_et_1"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="@dimen/font_size_normal"
            android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>